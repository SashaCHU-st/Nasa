{
    "compilerOptions": {
      "target": "ES6",                  
      "module": "ESNext",                
      "moduleResolution": "node",        // Add this option to use Node module resolution
      "jsx": "react-jsx",                
      "strict": true,                    
      "esModuleInterop": true,           
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true 
    },
    "include": [
      "src/**/*"
    ]
  }
  